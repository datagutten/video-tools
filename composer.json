{
    "name": "datagutten/video-tools",
    "description": "A collection of tools for working with video files",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "datagutten",
            "email": "datagutten@datagutten.net"
        }
    ],
    "require": {
        "datagutten/tools": "^1.8",
        "ext-simplexml": "*",
        "php": ">=8.0",
        "symfony/process": "^4|^5|^6"
    },
    "autoload": {
        "psr-4": {
            "datagutten\\video_tools\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "datagutten\\video_tools\\tests\\": "tests"
        }
    },
    "bin": [
        "scripts/ttml_to_srt",
        "scripts/vtt_to_srt",
        "scripts/mkvmerge"
    ],
    "require-dev": {
        "phpunit/phpunit": "^9",
        "symfony/filesystem": "^4.3|^5"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
